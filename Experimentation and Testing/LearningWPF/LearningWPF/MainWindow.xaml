<Window x:Class="LearningWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LearningWPF"
        mc:Ignorable="d"
        Title="ADA" Height="100" Width="100"
        AllowsTransparency="True" WindowStyle="None">
    <Window.Background>
        <SolidColorBrush Opacity="0.3" Color="White"/>
    </Window.Background>
    <Grid>
        <StackPanel HorizontalAlignment="Right">
            <Button Name="CloseButton" Content="Close" Click="CloseButton_Click" Width="20" FontSize="6" />
        </StackPanel>
        <Rectangle Name="ActivityRectangle"
            Fill="Gray"
            Canvas.Left="10"
            Canvas.Top="25" Margin="20" />
    </Grid>
</Window>
